<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="212dp"
        android:layout_height="145dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/icon" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/userLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#FFB90F"
        android:text="User Login"
        android:textColor="#000000" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/professionalLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/userLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#FFB90F"
        android:text="Professional Login"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/registerhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/professionalLogin"
        android:text="Not Registered! Register here."
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>


</RelativeLayout>