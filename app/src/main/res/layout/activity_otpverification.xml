<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPverification"
    android:background="@color/black">

    <TextView
        android:id="@+id/textofdotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="40sp"/>
    <TextView
        android:id="@+id/otptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the otp sent on mobile"
        android:layout_below="@+id/textofdotp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/show_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otptext"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/show_number"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/otp1"
            android:textAlignment="center"
            android:hint="_"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:inputType="number"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/background_box"/>
        <EditText
            android:id="@+id/otp2"
            android:textAlignment="center"
            android:hint="_"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:inputType="number"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/background_box"/>
        <EditText
            android:id="@+id/otp3"
            android:textAlignment="center"
            android:hint="_"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:inputType="number"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/background_box"/>
        <EditText
            android:hint="_"
            android:textAlignment="center"
            android:id="@+id/otp4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:inputType="number"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/background_box"/>
        <EditText
            android:hint="_"
            android:textAlignment="center"
            android:id="@+id/otp5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:inputType="number"
            android:textSize="20sp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:background="@drawable/background_box" />
        <EditText
            android:hint="_"
            android:textAlignment="center"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:id="@+id/otp6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:textSize="20sp"
            android:inputType="number"
            android:background="@drawable/background_box"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verify"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_otp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#FFB90F"
            />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:visibility="gone"/>


    </FrameLayout>




</RelativeLayout>